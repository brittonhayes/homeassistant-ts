{
  "name": "@brittonhayes/homeassistant-ts",
  "version": "1.0.0",
  "description": "A Home Assistant REST API typescript client.",
  "main": "dist/index.js",
  "private": false,
  "scripts": {
    "test": "jest",
    "start": "ts-node src/index.ts",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc",
    "lint": "eslint . --ext .ts",
    "build": "tsc",
    "generate": "openapi-typescript ./openapi.yaml --output ./src/homeassistant/schema.ts && prettier --write ./src/homeassistant/schema.ts",
    "format": "prettier --write src/**/*.ts",
    "prepare": "husky install"
  },
  "keywords": [
    "homeassistant",
    "typescript",
    "sdk"
  ],
  "author": "Britton Hayes",
  "dependencies": {
    "@types/node-fetch": "2",
    "dotenv": "^16.0.3",
    "node-fetch": "2"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/node": "^18.0.3",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "jest": "^29.3.1",
    "openapi-typescript": "^6.1.0",
    "openapi-typescript-fetch": "^1.1.3",
    "prettier": "^2.7.1",
    "ts-node": "^10.8.2",
    "typedoc": "^0.23.21",
    "typedoc-plugin-markdown": "^3.14.0",
    "typescript": "^4.7.4"
  }
}
