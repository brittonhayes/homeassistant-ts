{
  "name": "@brittonhayes/homeassistant-ts",
  "version": "0.1.20",
  "description": "A Home Assistant REST API typescript client.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "git@github.com:brittonhayes/homeassistant-ts.git",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "start": "ts-node src/index.ts",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc",
    "lint": "eslint . --ext .ts",
    "build": "tsc",
    "generate": "openapi-typescript ./openapi.yaml --output ./src/homeassistant/schema.ts && prettier --write ./src/homeassistant/schema.ts",
    "format": "prettier --write src/**/*.ts",
    "prepare": "npx husky install"
  },
  "keywords": [
    "homeassistant",
    "typescript",
    "sdk"
  ],
  "author": "Britton Hayes",
  "dependencies": {
    "@types/node-fetch": "2",
    "dotenv": "^16.0.3",
    "node-fetch": "2"
  },
  "devDependencies": {
    "@types/jest": "^29.2.4",
    "@types/node": "^18.0.3",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "jest": "^29.3.1",
    "msw": "^0.49.2",
    "openapi-typescript": "^6.1.0",
    "openapi-typescript-fetch": "^1.1.3",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.8.2",
    "typedoc": "^0.24.4",
    "typescript": "^4.7.4"
  },
  "files": [
    "lib/**/*"
  ]
}